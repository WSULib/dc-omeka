    echo $this->userSelect([
        'name' => 'owner_id',
        'options' => [
            'empty_option' => '',
            'prepend_value_options' => [
                '0' => sprintf('[%s]', $this->translate('No owner')),
            ],
        ],
        'attributes' => [
            'id' => 'filter-owner',
            'class' => 'chosen-select',
            'value' => $this->params()->fromQuery('owner_id'),
            'data-placeholder' => 'Filter by owner', // @translate
        ],
    ]);
    ?>
